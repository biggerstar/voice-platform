{
  "name": "vben-admin-monorepo",
  "version": "5.5.1",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install && npm run build",
    "dev": "turbo-run dev",
    "dev:nest-admin:docker": "pnpm -F nest-admin run docker:build:dev",
    "dev:nest-admin": "pnpm -F nest-admin run dev",
    "dev:frontend": "pnpm -F @marketing/frontend run dev",
    "dev:desktop": "pnpm -F @marketing/desktop run dev",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build --force",
    "build:web:analyze": "turbo build:analyze",
    "build:web:docker": "./scripts/deploy/build-local-docker-image.sh",
    "preview:web": "turbo-run preview",
    "check:web": "pnpm run check:circular && pnpm run check:dep && pnpm run check:type && pnpm check:cspell",
    "check:web:circular": "vsh check-circular",
    "check:web:cspell": "cspell lint **/*.ts **/README.md .changeset/*.md --no-progress",
    "check:web:dep": "vsh check-dep",
    "check:web:type": "turbo run typecheck",
    "commit": "czg",
    "format": "vsh lint --format",
    "lint": "vsh lint",
    "clean": "node ./scripts/clean.mjs",
    "reinstall": "pnpm clean --del-lock && pnpm run bootstrap",
    "postinstall": "pnpm -r run stub --if-present",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || husky",
    "publint": "vsh publint",
    "test:unit": "vitest run --dom",
    "update:deps": "npx taze -r -w",
    "version": "pnpm exec changeset version && pnpm install --no-frozen-lockfile",
    "changeset": "pnpm exec changeset",
    "catalog": "pnpx codemod pnpm/catalog"
  },
  "devDependencies": {
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@mdn/browser-compat-data": "^6.0.19",
    "@playwright/test": "catalog:",
    "@types/lodash-es": "catalog:",
    "@types/node": "catalog:",
    "@vben/commitlint-config": "workspace:*",
    "@vben/eslint-config": "workspace:*",
    "@vben/prettier-config": "workspace:*",
    "@vben/stylelint-config": "workspace:*",
    "@vben/tailwind-config": "workspace:*",
    "@vben/tsconfig": "workspace:*",
    "@vben/turbo-run": "workspace:*",
    "@vben/vite-config": "workspace:*",
    "@vben/vsh": "workspace:*",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vue/test-utils": "catalog:",
    "autoprefixer": "catalog:",
    "chalk": "catalog:",
    "cross-env": "catalog:",
    "cspell": "catalog:",
    "dotenv": "catalog:",
    "fs-extra": "catalog:",
    "happy-dom": "catalog:",
    "husky": "catalog:",
    "is-ci": "catalog:",
    "lint-staged": "catalog:",
    "node-scp": "catalog:",
    "playwright": "catalog:",
    "readline": "catalog:",
    "rimraf": "catalog:",
    "shelljs": "catalog:",
    "tailwindcss": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.12.0"
  },
  "packageManager": "pnpm@9.15.5",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "overrides": {
      "@ast-grep/napi": "catalog:",
      "@ctrl/tinycolor": "catalog:",
      "clsx": "catalog:",
      "pinia": "catalog:",
      "vue": "catalog:"
    },
    "neverBuiltDependencies": [
      "canvas",
      "node-gyp"
    ]
  },
  "dependencies": {
    "@ant-design/icons-vue": "catalog:",
    "google-protobuf": "^3.21.4",
    "lodash-es": "catalog:",
    "querystring": "^0.2.1",
    "socket.io-client": "^4.8.1"
  }
}
